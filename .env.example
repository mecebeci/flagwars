# ==============================================
# Django Configuration
# ==============================================
SECRET_KEY='django-insecure-change-this-in-production'
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com,www.yourdomain.com

# ==============================================
# Database Configuration (PostgreSQL)
# ==============================================
POSTGRES_DB=flagwars
POSTGRES_USER=flagwars_user
POSTGRES_PASSWORD=secure_database_password_here
POSTGRES_HOST=db
POSTGRES_PORT=5432

# ==============================================
# Redis Configuration
# ==============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password_here

# ==============================================
# MinIO Object Storage Configuration
# ==============================================
MINIO_ROOT_USER=minio_admin
MINIO_ROOT_PASSWORD=secure_minio_password_here
MINIO_ENDPOINT=minio:9000
MINIO_USE_SSL=False
MINIO_BUCKET_NAME=flags

# ==============================================
# Celery Configuration
# ==============================================
CELERY_BROKER_URL=redis://:secure_redis_password_here@redis:6379/0
CELERY_RESULT_BACKEND=redis://:secure_redis_password_here@redis:6379/0

# ==============================================
# Celery Flower (Task Monitor) - Optional
# ==============================================
FLOWER_USER=admin
FLOWER_PASSWORD=secure_flower_password_here

# ==============================================
# CORS Configuration
# ==============================================
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:5173,https://yourdomain.com

# ==============================================
# Production-Specific Settings
# ==============================================
# For production, set DEBUG=False and configure proper ALLOWED_HOSTS
# Generate a strong SECRET_KEY using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'

# ==============================================
# Optional: Custom Domain Configuration
# ==============================================
# If using a custom domain, add it to CSRF_TRUSTED_ORIGINS in settings.py
# Example: CSRF_TRUSTED_ORIGINS = ['https://yourdomain.com']
